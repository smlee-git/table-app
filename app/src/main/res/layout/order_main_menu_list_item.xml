<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_order_main_menu_list_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/tv_order_main_menu_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#2B2A2A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_order_main_menu_list_item_img"
        android:layout_margin="16dp"
        tools:text="햄버거"
        />

    <TextView
        android:id="@+id/tv_order_main_menu_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size"
        app:layout_constraintTop_toBottomOf="@id/tv_order_main_menu_list_item_name"
        app:layout_constraintStart_toStartOf="@id/tv_order_main_menu_list_item_name"
        android:layout_marginTop="8dp"
        tools:text="16000원"
        />

    <EditText
        android:id="@+id/et_order_main_menu_list_item_count"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        tools:text="3"
        android:text="0"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/btn_order_main_menu_list_add"
        app:layout_constraintBottom_toBottomOf="@id/btn_order_main_menu_list_add"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toStartOf="@id/btn_order_main_menu_list_add"
        />

    <TextView
        android:id="@+id/btn_order_main_menu_list_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/common_text_size"
        android:textStyle="bold"
        android:text="추가"
        android:clickable="true"
        android:background="@drawable/common_primary_radius_6_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        />

</android.support.constraint.ConstraintLayout>