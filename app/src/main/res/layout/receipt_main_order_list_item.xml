<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_receipt_main_order_list_item_poster"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/tv_receipt_main_order_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#2B2A2A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_receipt_main_order_list_item_poster"
        android:layout_margin="16dp"
        tools:text="햄버거"
        />

    <TextView
        android:id="@+id/tv_receipt_main_order_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size"
        app:layout_constraintTop_toBottomOf="@id/tv_receipt_main_order_list_item_name"
        app:layout_constraintStart_toStartOf="@id/tv_receipt_main_order_list_item_name"
        android:layout_marginTop="8dp"
        tools:text="16000원"
        />

    <TextView
        android:id="@+id/tv_receipt_main_order_list_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size"
        app:layout_constraintTop_toBottomOf="@id/tv_receipt_main_order_list_item_price"
        app:layout_constraintStart_toStartOf="@id/tv_receipt_main_order_list_item_price"
        android:layout_marginTop="8dp"
        tools:text="3개"
        />

</android.support.constraint.ConstraintLayout>